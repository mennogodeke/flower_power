<h1>Bestellingen</h1>

<% if current_user.employee_role? %>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Winkel</th>
    <th>Klant</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <% @orders.each do |order| %>
      <tbody>
      <tr>
        <td><%= order.store.store_name %></td>
        <td><%= order.customer.email %></td>
        <td><%= link_to 'Show', order_path(order), class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', order_path(order),
                        method: :delete,
                        data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
      </tbody>
  <% end %>
</table>
<% else %>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Winkel</th>
        <th>Datum</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <% @orders.each do |order| %>
          <tbody>
          <tr>
            <td><%= order.store.store_name %></td>
            <td><%= order.created_at %></td>
            <td><%= link_to 'Show', order_path(order), class: "btn btn-default" %></td>
            <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', order_path(order),
                            method: :delete,
                            data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
          </tbody>
      <% end %>
    </table>
<% end %>

<%= link_to "Nieuwe Bestelling", new_order_path, class: 'btn btn-success' %>
