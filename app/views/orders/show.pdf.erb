<%= wicked_pdf_stylesheet_link_tag "application" %>
<%= wicked_pdf_stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<row class="clearfix">
  <div class="col-md-5">
    <h3>Afhaal Winkel</h3>
    <%= @order.store.store_name %><br>
    <%= @order.store.store_address %><br>
    <%= @order.store.store_zip %><br>
    <%= @order.store.store_city %><br>
    <%= @order.store.store_telephone %><br>
  </div>
  <div class="col-md-5">
    <h3>Klant</h3>
    <%= @order.customer.first_name %> <%= @order.customer.insertion %> <%= @order.customer.last_name %><br>
    <%= @order.customer.address %><br>
    <%= @order.customer.zip %><br>
    <%= @order.customer.city %><br>
    <%= @order.customer.email %><br>
  </div>
</row>



<h2>Producten</h2>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Product</th>
    <th>Aantal</th>
    <th>Per stuk</th>
    <th>Bedrag</th>
  </tr>
  </thead>
  <% @order.order_items.each do |item| %>
      <tbody>
      <tr>
        <td><%= item.product.product_name %></td>
        <td><%= item.amount %></td>
        <td><%= item.product.product_price%></td>
        <td><%= item.amount * item.product.product_price %><td>
      </tr>

      </tbody>
  <% end %>
</table>

<row>
  <div class="col-md-6">
    <h3>Status</h3>
    Bestelling ligt klaar<br>
    Afgehandeld door: <%= @order.employee.first_name %> <%= @order.employee.insertion %> <%= @order.employee.last_name %>