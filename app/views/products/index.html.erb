<h1>Listing Products</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>naam</th>
      <th>prijs</th>
    </tr>
  </thead>
  <% @products.each do |product| %>
      <tbody>
        <tr>
          <td><%= product.product_name %></td>
          <td><%= number_to_currency(product.product_price, :unit => "â‚¬") %></td>
          <% if user_signed_in? %>
            <% if current_user.employee_role? %>
              <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning" %></td>
              <td><%= link_to 'Destroy', product_path(product),
                              method: :delete,
                              data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            <% end %>
          <% end %>
        </tr>
      </tbody>
  <% end %>
</table>
<% if user_signed_in? %>
    <% if current_user.employee_role? %>
      <%= link_to "Nieuw Product", new_product_path, class: 'btn btn-success' %>
    <% end %>
<% end %>