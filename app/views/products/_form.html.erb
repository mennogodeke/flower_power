<%= simple_form_for @product do |f| %>
    <%= f.button :submit, "Voeg product toe" %>
    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@product.errors.count, "error") %> Voorkomen dat dit artikel kan worden opgeslagen
          </h2>
          <ul>
            <% @product.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <%= f.input :product_name, label: 'Product naam' %><br>
    Prijs
    <%= f.number_field :product_price %>
    <%= f.button :submit, "Voeg product toe" %>

<% end %>